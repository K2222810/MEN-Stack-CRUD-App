<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Add New Recipe</title>
  </head>
  <body>
    <%- include('../partials/_navbar.ejs') %>
    <h1>Add New Recipe</h1>
    
    <form action="/recipes" method="POST">
      <label for="name">Recipe Name:</label>
      <input type="text" id="name" name="name" required />
      
      <label for="cuisine">Cuisine:</label>
      <input type="text" id="cuisine" name="cuisine" required />
      
      <label for="cookTime">Cook Time (minutes):</label>
      <input type="number" id="cookTime" name="cookTime" required min="0" />
      
      <label for="servings">Servings:</label>
      <input type="number" id="servings" name="servings" required min="1" />
      
      <label for="instructions">Instructions:</label>
      <textarea id="instructions" name="instructions"></textarea>
      
      <label for="ingredients">Select Ingredients:</label>
      <select id="ingredients" name="ingredients" multiple>
        <% ingredients.forEach(ingredient => { %>
          <option value="<%= ingredient._id %>"><%= ingredient.name %></option>
        <% }); %>
      </select>
      <p><small>Hold Ctrl (or Cmd on Mac) to select multiple ingredients</small></p>
      
      <button type="submit">Create Recipe</button>
    </form>
    
    <a href="/recipes">Back to My Recipes</a>
    <a href="/ingredients">Manage Ingredients</a>
  </body>
</html>
