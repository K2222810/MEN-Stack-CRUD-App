<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Add New Recipe</title>
  </head>
  <body>
    <%- include('../partials/_navbar.ejs') %>
    <h1>Add New Pizza</h1>
    
    <form action="/recipes" method="POST">
      <label for="pizzaType">Pizza Type:</label>
      <input type="text" id="pizzaType" name="pizzaType" required />
      
      <label for="size">Size:</label>
      <select id="size" name="size" required>
        <option value="">Select Size</option>
        <option value="small">Small</option>
        <option value="medium">Medium</option>
        <option value="large">Large</option>
      </select>
      
      <label for="crust">Crust:</label>
      <input type="text" id="crust" name="crust" required />
      
      <label for="sauce">Sauce:</label>
      <input type="text" id="sauce" name="sauce" required />
      
      <label for="cheeseLevel">Cheese Level:</label>
      <input type="text" id="cheeseLevel" name="cheeseLevel" />
      
      <label for="instructions">Instructions:</label>
      <textarea id="instructions" name="instructions"></textarea>
      
      <label for="ingredients">Select Ingredients:</label>
      <select id="ingredients" name="ingredients" multiple>
        <% ingredients.forEach(ingredient => { %>
          <option value="<%= ingredient._id %>"><%= ingredient.ingredients %></option>
        <% }); %>
      </select>
      <p><small>Hold Ctrl (or Cmd on Mac) to select multiple ingredients</small></p>
      
      <button type="submit">Create Pizza</button>
    </form>
    
    <a href="/recipes">Back to My Pizzas</a>
    <a href="/ingredients">Manage Ingredients</a>
  </body>
</html>
