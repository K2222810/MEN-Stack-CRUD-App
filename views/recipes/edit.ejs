<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit Recipe</title>
  </head>
  <body>
    <%- include('../partials/_navbar.ejs') %>
    <h1>Edit Recipe</h1>
    
    <form action="/recipes/<%= recipe._id %>?_method=PUT" method="POST">
      <label for="name">Recipe Name:</label>
      <input type="text" id="name" name="name" value="<%= recipe.name %>" required />
      
      <label for="cuisine">Cuisine:</label>
      <input type="text" id="cuisine" name="cuisine" value="<%= recipe.cuisine %>" required />
      
      <label for="cookTime">Cook Time (minutes):</label>
      <input type="number" id="cookTime" name="cookTime" value="<%= recipe.cookTime %>" required min="0" />
      
      <label for="servings">Servings:</label>
      <input type="number" id="servings" name="servings" value="<%= recipe.servings %>" required min="1" />
      
      <label for="instructions">Instructions:</label>
      <textarea id="instructions" name="instructions"><%= recipe.instructions %></textarea>
      
      <label for="ingredients">Select Ingredients:</label>
      <select id="ingredients" name="ingredients" multiple>
        <% ingredients.forEach(ingredient => { %>
          <% const isSelected = recipe.ingredients.some(selected => selected._id.toString() === ingredient._id.toString()); %>
          <option value="<%= ingredient._id %>" <% if (isSelected) { %>selected<% } %>><%= ingredient.name %></option>
        <% }); %>
      </select>
      <p><small>Hold Ctrl (or Cmd on Mac) to select multiple ingredients</small></p>
      
      <button type="submit">Update Recipe</button>
    </form>
    
    <a href="/recipes/<%= recipe._id %>">View Recipe</a>
    <a href="/recipes">Back to My Recipes</a>
  </body>
</html>
